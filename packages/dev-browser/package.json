{
  "name": "dev-browser",
  "version": "0.0.1",
  "type": "module",
  "exports": {
    ".": "./src/index.ts",
    "./client": "./src/client.ts",
    "./dom": "./src/dom/index.ts"
  },
  "scripts": {
    "dev": "bun x tsx --watch src/index.ts",
    "build": "bun x tsup src/index.ts src/client.ts src/dom/index.ts --format esm --dts",
    "start": "bun x tsx src/index.ts",
    "test": "vitest run",
    "test:watch": "vitest",
    "dump-hn-tree": "bun x tsx scripts/dump-hn-tree.ts"
  },
  "dependencies": {
    "express": "^4.21.0",
    "playwright": "^1.49.0"
  },
  "devDependencies": {
    "@types/express": "^5.0.0",
    "tsx": "^4.21.0",
    "tsup": "^8.0.0",
    "vitest": "^2.1.0"
  }
}
